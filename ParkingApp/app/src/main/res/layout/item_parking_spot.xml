<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- TextView for Spot ID -->
    <TextView
        android:id="@+id/spotIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spot ID"
        android:textSize="16sp" />

    <!-- TextView for Spot Status (Available/Unavailable) -->
    <TextView
        android:id="@+id/spotStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="16sp" />
    <!-- Button for reserving the spot, only visible if available -->
    <Button
        android:id="@+id/reserveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserve this spot"
        android:visibility="gone" />

    <!-- TextView for expected time to leave, only visible if unavailable -->
    <TextView
        android:id="@+id/expectedTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expected time to leave"
        android:visibility="gone" />
</LinearLayout>